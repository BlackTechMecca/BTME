<div class="header">
	<div class="container">
		<div class="row">
			<!-- Page Title -->
			<div class="col-sm-6 col-xs-12">
				<h1>Blog</h1>
			</div>

			<!-- Breadcrumbs -->
			<div class="col-sm-6"> 
				<ol class="breadcrumb">
					<li><span class="ion-home breadcrumb-home"></span><a href="index.html">Home</a></li>
					<li>Blog</li>
					<li>New Blog Post</li>
				</ol>
			</div>
		</div>
	</div>
</div>
<div class="content-40mg">
	<div class="container">
		<div class="row">
			<section class="col-lg-9 col-lg-offset-1 col-md-9 col-sm-4">
				<div class="panel panel-primary">
					<div class="panel-heading">New Blog</div>
						<div class="panel-body">
							<%= form_for(@blog) do |f| %>
								<div class="form-group">
									<%= f.label :title %>
									<%= f.text_field :title, placeholder: "Blog Title", class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= f.label :lead %>
									<%= f.text_field :lead, placeholder: "Short Lead", class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= f.label :content %>
									<%= f.text_area :content, placeholder: "Blog Content", cols: "30", rows: "15", class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= f.label :article_url %>
									<%= f.text_field :article_url, placeholder: "Article URL ", class: 'form-control' %>
								</div>
								<div class="form-group">
									<%= f.label :image_url %>
									<%= f.text_field :image_url, placeholder: "Image URL", class: 'form-control' %>
								</div>
								<div class="form-group">
									<div class="form-group">
									<%= f.label :category %>
									<%= f.select(:category, ['','Black Tech'], {}, {class: 'form-control'}) %>
		                        	</div>
		                        </div>
		                        <button class="btn btn-rw btn-primary" type="submit">Submit</button>
							<% end %>
						</div>
					</div>
				</div>
			</section>
		</div>
	</div>
</div>


